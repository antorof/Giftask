<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/negro</item>
        <item name="android:windowBackground">@color/gris100</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>

        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/LIME_700</item>
        <item name="colorAccent">@color/purple_a200</item>

    </style>


    <style name="NavDrawerTitleText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="NavDrawerSubtitleText" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BotonFlotanteLabel">
        <item name="android:background">@drawable/boton_flotante_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
