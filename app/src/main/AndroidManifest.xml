<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.trigit.gitftask" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Pantallas.ActivityLogin"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pantallas.ActivityPrincipal"
            android:label="@string/title_activity_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Pantallas.ActivityRegalo"
            android:label="@string/title_activity_activity_regalo"
            android:parentActivityName=".Pantallas.ActivityPrincipal" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="es.trigit.gitftask.Pantallas.ActivityPrincipal" />
        </activity>
    </application>

</manifest>
